{% extends 'AppBundle::layout-bo.html.twig' %}

{% block content %}
    <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
        <div class="mdl-card__title">
            <h2>{{ 'Account'|trans }}</h2>
            <div class="mdl-card__subtitle">{{ 'Please complete the form'|trans }}</div>
        </div>

        <div class="mdl-card__supporting-text">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="form__article">
                    <h3>{{ 'Connexion data'|trans }}</h3>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.email, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.email, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>

                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.username, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.username, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--8-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.vignet, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.vignet, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <a href="{{ asset('uploads/vignet/' ~ user.vignet) }}">
                                <img src="{{ asset('uploads/vignet/'~user.vignet|e) }}" class="vignet-bulle" alt="" />
                            </a>
                        </div>
                    </div>

                    <h3>{{ 'Personal data'|trans }}</h3>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.firstname, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.firstname, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.lastname, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.lastname, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>

                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.address, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.address, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>

                        <div class="mdl-cell mdl-cell--3-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.zip_code, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.zip_code, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-cell mdl-cell--9-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.city, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.city, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form__article employer-form__contacts">
                    <h3>{{ 'Contact'|trans }}</h3>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col input-group">
                            <i class="material-icons pull-left">call</i>

                            <div class="mdl-textfield mdl-js-textfield pull-left">
                                {{ form_widget(form.phone, {'attr': {'class': 'mdl-textfield__input'}}) }}
                                {{ form_label(form.phone, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col input-group">
                            <img src="{{ asset('bundles/app/images/facebook.svg') }}">

                            <div class="mdl-textfield mdl-js-textfield pull-left">
                                {{ form_widget(form.facebook, {'attr': {'class': 'mdl-textfield__input'}}) }}
                                {{ form_label(form.facebook, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col input-group">
                            <img src="{{ asset('bundles/app/images/twitter.svg') }}">

                            <div class="mdl-textfield mdl-js-textfield pull-left">
                                {{ form_widget(form.twitter, {'attr': {'class': 'mdl-textfield__input'}}) }}
                                {{ form_label(form.twitter, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col input-group">
                            <img src="{{ asset('bundles/app/images/skype.svg') }}">

                            <div class="mdl-textfield mdl-js-textfield pull-left">
                                {{ form_widget(form.skype, {'attr': {'class': 'mdl-textfield__input'}}) }}
                                {{ form_label(form.skype, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                            </div>
                        </div>
                    </div>
                </div>



                <div class="form__article employer-form__general_skills">
                    <h3>{{ 'Description'|trans }}</h3>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_widget(form.about_me, {'attr': {'class': 'mdl-textfield__input'}}) }}
                        {{ form_label(form.about_me, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                    </div>
                </div>

                <div class="form__action">
                    <button id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                        Submit
                    </button>
                </div>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}