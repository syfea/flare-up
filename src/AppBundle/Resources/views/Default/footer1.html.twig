{%  set nbCategegories = categories|length %}
{%  set width = 100/nbCategegories %}
{% for category in categories %}
    <ul style="border-top: 4px solid #{{ category.color }}; width: {{ width }}%">
        <li class="footer-title">
            <a href="{{ category.url }}">{{ category.name }}</a>
        </li>
    </ul>
{% endfor %}