{% extends 'AppBundle::layout-fo.html.twig' %}

{% block content %}
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.6";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
        <div class="row">
            <div class="col l9 col m12 col s12">
                <!-- News Slider -->
                {{ render(controller('AppBundle:Default:slider')) }}
            </div>

            <div class="col l3 col m6 col s12">
                <div class="fb-page"
                     data-href="https://www.facebook.com/flareuup/"
                     data-small-header="false" data-adapt-container-width="true"
                     data-hide-cover="false" data-show-facepile="true">
                    <blockquote cite="https://www.facebook.com/flareuup/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/flareuup/">FLARE UP</a></blockquote></div>
            </div>
            <div class="col l3 col m6 col s12">
                {{ render(controller('AppBundle:Subscriber:index', {'request': app.request})) }}
            </div>
        </div>

        <div class="row">
            {{ render(controller('AppBundle:Default:articleList')) }}
        </div>

        <div class="row">
            {{ render(controller('AppBundle:Default:articleListInline')) }}
        </div>

        <div class="row">
            {{ render(controller('AppBundle:Default:alertOne')) }}
        </div>

        <section class="section">
            <div class="row">
                {{ render(controller('AppBundle:Default:sliderPictures')) }}

                <div class="col l3 col m12 col s12">
                    {{ render(controller('AppBundle:Default:topStories')) }}
                </div>
            </div>
        </section>
{% endblock %}