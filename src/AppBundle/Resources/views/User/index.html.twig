{% extends 'AppBundle::layout-bo.html.twig' %}

{% block content %}
    <div class="mdl-cell mdl-cell--2-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
            <i class="material-icons">add</i>
        </button>
    </div>

    <table data-upgraded=",MaterialDataTable" class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp projects-table is-upgraded lef>"
        <thead>
        <tr>
            <th><label data-upgraded=",MaterialCheckbox,MaterialRipple" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-data-table__select mdl-js-ripple-effect--ignore-events is-upgraded"><input class="mdl-checkbox__input" type="checkbox"><span class="mdl-checkbox__focus-helper"></span><span class="mdl-checkbox__box-outline"><span class="mdl-checkbox__tick-outline"></span></span><span data-upgraded=",MaterialRipple" class="mdl-checkbox__ripple-container mdl-js-ripple-effect mdl-ripple--center"><span class="mdl-ripple"></span></span></label></th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Username'|trans }}</th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Roles'|trans }}</th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Email '|trans }}</th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Enabled '|trans }}</th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Complete '|trans }}</th>
            <th class="mdl-data-table__cell--non-numeric">{{ 'Action '|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <label data-upgraded=",MaterialCheckbox,MaterialRipple" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-data-table__select mdl-js-ripple-effect--ignore-events is-upgraded">
                        <input class="mdl-checkbox__input" type="checkbox">
                        <span class="mdl-checkbox__focus-helper"></span>
                        <span class="mdl-checkbox__box-outline"><span class="mdl-checkbox__tick-outline"></span></span>
                        <span data-upgraded=",MaterialRipple" class="mdl-checkbox__ripple-container mdl-js-ripple-effect mdl-ripple--center"><span class="mdl-ripple"></span></span></label>
                </td>
                <td class="mdl-data-table__cell--non-numeric">{{ user.username }}</td>
                <td class="mdl-data-table__cell--non-numeric">
                    {% for key, role in user.roles %}
                        {% if role == 'ROLE_SUPER_ADMIN' %}
                            <span class="label label--mini background-color--mint">{{ 'Admin'|trans }}</span>
                        {% elseif key == 'ROLE_ADMIN' %}
                            <span class="label label--mini background-color--primary">{{ 'Redactor'|trans }}</span>
                        {% else %}
                            <span class="label label--mini background-color--baby-blue">{{ 'Personne'|trans }}</span>
                        {% endif %}
                    {% endfor %}
                </td>
                <td class="mdl-data-table__cell--non-numeric">{{ user.email }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ user.enabled }}</td>
                <td class="mdl-data-table__cell--non-numeric">
                    <div tabindex="0" data-upgraded=",MaterialProgress" id="task1" class="mdl-progress mdl-js-progress is-upgraded"><div style="width: 44%;" class="progressbar bar bar1"></div><div style="width: 100%;" class="bufferbar bar bar2"></div><div style="width: 0%;" class="auxbar bar bar3"></div></div>
                    <div data-upgraded=",MaterialTooltip" class="mdl-tooltip" for="task1">
                        44%
                    </div>
                </td>
                <td>
                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab">
                        <i class="material-icons">update</i>
                    </button>
                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab">
                        <i class="material-icons">delete</i>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}