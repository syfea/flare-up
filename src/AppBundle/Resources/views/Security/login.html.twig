{% extends 'AppBundle::layout-fo.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col l12 col m12 col s12">
            <div class="login-page">
                <div class="col l4 col m6 col s12 offset-l4 offset-m3">
                    <div class="login-title">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% set result = error.messageKey|trans(error.messageData, 'security') %}
                        {%  else  %}
                            {% set result = 'Login Successful' %}
                        {% endif %}
                    </div>
                    <form action="{{ path("app_back_office_security_check") }}" method="post" class="center-block">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="input-field">
                            <i class="mdi-action-perm-identity prefix fa fa-envelope-o"></i>
                            <input id="username" name="_username" type="email" class="validate" placeholder="">
                            <label for="username">{{ 'Login'|trans }}</label>
                        </div>
                        <div class="input-field">
                            <i class="mdi-action-lock-open prefix fa fa-key fa-3x"></i>
                            <input id="name" name="_password" type="password" class="validate">
                            <label for="name">{{ 'Password'|trans }}</label>
                        </div>
                        <div class="input-field forgot-password left">
                            <a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot your password'|trans }}</a>
                        </div>
                        <div class="input-field">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                        </div>
                        <div class="input-field">
                            <button name="action" type="submit" class="btn btn-flat waves-effect waves-light shopping-cart-button right">{{ 'Login'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}