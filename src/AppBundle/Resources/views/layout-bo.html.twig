{% extends '::back-office.html.twig' %}

{% block header %}
    <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            <div class="mdl-layout-spacer"></div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="search">
                    <i class="material-icons">search</i>
                </label>

                <div class="mdl-textfield__expandable-holder">
                    <input class="mdl-textfield__input" type="text" id="search"/>
                    <label class="mdl-textfield__label" for="search">Enter your query...</label>
                </div>
            </div>

            <div class="material-icons mdl-badge mdl-badge--overlap mdl-button--icon notification" id="notification"
                 data-badge="23">
                notifications_none
            </div>

            <ul class="mdl-menu mdl-list mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-right mdl-shadow--2dp notifications-dropdown"
                for="notification">
                <li class="mdl-list__item">
                    You have 23 new notifications!
                </li>
                <li class="mdl-menu__item mdl-list__item list__item--border-top">
                    <span class="mdl-list__item-primary-content">
                        <span class="mdl-list__item-avatar background-color--primary">
                            <i class="material-icons">plus_one</i>
                        </span>
                        <span>You have 3 new orders.</span>
                    </span>
                    <span class="mdl-list__item-secondary-content">
                      <span class="label">just now</span>
                    </span>
                </li>
                <li class="mdl-menu__item mdl-list__item list__item--border-top">
                    <span class="mdl-list__item-primary-content">
                        <span class="mdl-list__item-avatar background-color--secondary">
                            <i class="material-icons">error_outline</i>
                        </span>
                      <span>Database error</span>
                    </span>
                    <span class="mdl-list__item-secondary-content">
                      <span class="label">1 min</span>
                    </span>
                </li>
                <li class="mdl-menu__item mdl-list__item list__item--border-top">
                    <span class="mdl-list__item-primary-content">
                        <span class="mdl-list__item-avatar background-color--primary">
                            <i class="material-icons">new_releases</i>
                        </span>
                      <span>The Death Star is built!</span>
                    </span>
                    <span class="mdl-list__item-secondary-content">
                      <span class="label">2 hours</span>
                    </span>
                </li>
                <li class="mdl-menu__item mdl-list__item list__item--border-top">
                    <span class="mdl-list__item-primary-content">
                        <span class="mdl-list__item-avatar background-color--primary">
                            <i class="material-icons">mail_outline</i>
                        </span>
                      <span>You have 4 new mails.</span>
                    </span>
                    <span class="mdl-list__item-secondary-content">
                      <span class="label">5 days</span>
                    </span>
                </li>
                <li class="mdl-list__item list__item--border-top">
                    <button href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">ALL NOTIFICATIONS</button>
                </li>
            </ul>

            {{ render(controller('AppBundle:Contact:blockHeader')) }}

            <div class="avatar-dropdown" id="icon">
                <span>{{ app.user.username }}</span>
                <img src="{{ asset('uploads/vignet/'~app.user.vignet|e) }}" alt="" />
            </div>

            <ul class="mdl-menu mdl-list mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect mdl-shadow--2dp account-dropdown"
                for="icon">
                <li class="mdl-list__item mdl-list__item--two-line">
                    <span class="mdl-list__item-primary-content">
                        <img class="vignet-bulle" src="{{ asset('uploads/vignet/'~app.user.vignet|e) }}" alt="" />
                        <span>{{ app.user.username }}</span>
                        <span class="mdl-list__item-sub-title">{{ app.user.email }}</span>
                    </span>
                </li>
                <li class="list__item--border-top"></li>
                <li class="mdl-menu__item mdl-list__item">
                    <a href="{{ path('app_backofficebundle_myaccount') }}">
                        <span class="mdl-list__item-primary-content">
                            <i class="material-icons mdl-list__item-icon">account_circle</i>
                            {{ 'My account'|trans }}
                        </span>
                    </a>
                </li>
                <li class="mdl-menu__item mdl-list__item">
                    <span class="mdl-list__item-primary-content">
                        <i class="material-icons mdl-list__item-icon">check_box</i>
                        My tasks
                    </span>
                    <span class="mdl-list__item-secondary-content">
                      <span class="label background-color--primary">3 new</span>
                    </span>
                </li>
                <li class="mdl-menu__item mdl-list__item">
                    <span class="mdl-list__item-primary-content">
                        <i class="material-icons mdl-list__item-icon">perm_contact_calendar</i>
                        My events
                    </span>
                </li>
                <li class="list__item--border-top"></li>
                <li class="mdl-menu__item mdl-list__item">
                    <a href="{{ path('app_backofficebundle_parameter_index') }}" class="mdl-list__item-primary-content">
                        <i class="material-icons mdl-list__item-icon">settings</i>
                        Settings
                    </a>
                </li>
                <li class="mdl-menu__item mdl-list__item">
                    <a href="{{ path('fos_user_security_logout') }}">
                        <span class="mdl-list__item-primary-content">
                            <i class="material-icons mdl-list__item-icon text-color--secondary">exit_to_app</i>
                            {{ 'Log out'|trans }}
                        </span>
                    </a>
                </li>
            </ul>

            <button id="more"
                    class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons">more_vert</i>
            </button>

            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect mdl-shadow--2dp settings-dropdown"
                for="more">
                <li class="mdl-menu__item">
                    <a href="{{ path('fos_user_security_logout') }}">{{ 'Log out'|trans }}</a>
                </li>
            </ul>
        </div>
    </header>
{% endblock %}

{% block nav %}
    <nav class="mdl-navigation">
        <a class="mdl-navigation__link mdl-navigation__link--current" href="{{ path('app_backofficebundle_home') }}">
            <i class="material-icons" role="presentation">dashboard</i>
            {{ 'Dashboard'|trans }}
        </a>
        <a class="mdl-navigation__link" href="{{ path('app_backofficebundle_myaccount') }}">
            <i class="material-icons" role="presentation">person</i>
            {{ 'My account'|trans }}
        </a>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="mdl-navigation__link" href="{{ path('app_backofficebundle_users') }}">
                <i class="material-icons" role="presentation">people</i>
                {{ 'Users'|trans }}
            </a>
            <a class="mdl-navigation__link" href="{{ path('app_backofficebundle_category_index') }}">
                <i class="material-icons" role="presentation">folder</i>
                {{ 'Categories'|trans }}
            </a>
        {% endif %}

        <a class="mdl-navigation__link" href="{{ path('app_backofficebundle_article_index') }}">
            <i class="material-icons" role="presentation">insert_drive_file</i>
            {{ 'Articles'|trans }}
        </a>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="mdl-navigation__link" href="{{ path('app_backofficebundle_subscriber_index') }}">
                <i class="material-icons" role="presentation">mail</i>
                {{ 'Subscribers'|trans }}
            </a>
        {% endif %}

        <div class="mdl-layout-spacer"></div>
        <a class="mdl-navigation__link" href="https://github.com/syfea/flare-up">
            <i class="material-icons" role="presentation">link</i>
            GitHub
        </a>
    </nav>
{%  endblock %}

{% block content %}
{% endblock %}

{% block footer %}
{% endblock %}