<div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-col-tablet mdl-cell--2-col-phone">
    <div class="mdl-card mdl-shadow--2dp trending">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">{{ 'The better articles'|trans }}</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <ul class="mdl-list">
                {% for article in articles|slice(0, 5) %}
                    <li class="mdl-list__item">
                        <span class="mdl-list__item-primary-content list__item-text">
                            {{ article['article'][0].title|slice(0,30) }}
                        </span>
                        <span class="mdl-list__item-secondary-content">
                            {% if article['position'] == 'up' %}
                                <i class="material-icons trending__arrow-up" role="presentation">&#xE5C7</i>
                            {% elseif article['position'] == 'down' %}
                                <i class="material-icons trending__arrow-down" role="presentation">&#xE5C5</i>
                            {% endif %}
                        </span>
                        <span class="mdl-list__item-secondary-content trending__percent" alt="{{ article['nbViews'] }} {{ 'views'|trans }}">{{ article['nbViews'] }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>