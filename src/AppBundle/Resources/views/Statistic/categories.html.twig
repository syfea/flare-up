<div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-col-tablet mdl-cell--2-col-phone">
    <div class="mdl-card mdl-shadow--2dp pie-chart">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">{{ 'Articles'|trans }}</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <div class="pie-chart__container">

            </div>
        </div>
    </div>
</div>

{% set totalArticles = 0 %}
{% set firstArticle = 0 %}

<script>
    "use strict";
    var colors = [
        {% for category in categories %}
            "#{{ category.color }}",
        {% endfor %}
        ],
        data = [
            {% for category in categories %}
                {% set totalArticles = totalArticles + category.nbArticles %}
                {key: "{{ category.name }}", y: 0, end: {{ category.nbArticles }} },
            {% endfor %}
            {key: "Pending", y: {{ totalArticles }}.{{ firstArticle }} },
        ];
</script>