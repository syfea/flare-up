{% extends 'AppBundle::layout-fo.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col l12 col m12 col s12">
            <div class="login-page">
                <div class="col l4 col m6 col s12 offset-l4 offset-m3">
                    <div class="panel-body">
                        {% if invalid_username is defined %}
                            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                        {% endif %}
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                            <div class="input-field">
                                <i class="mdi-action-perm-identity prefix fa fa-envelope-o"></i>
                                <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                                <input type="text" id="username" class="form-control" name="username" required="required" />
                            </div>
                            <div class="input-field">
                                <button name="action" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" type="submit" class="btn btn-flat waves-effect waves-light shopping-cart-button right">{{ 'reset_password'|trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}