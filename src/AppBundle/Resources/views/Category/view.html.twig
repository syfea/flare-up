{% extends 'AppBundle::layout-bo.html.twig' %}

{% block content %}
    <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
        <div class="mdl-card__title">
            <h2>{{ 'Category'|trans }}</h2>
            <div class="mdl-card__subtitle">{{ 'Please complete the form'|trans }}</div>
        </div>

        <div class="mdl-card__supporting-text">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            {{ form_errors(form) }}
                <div class="form__article">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.name, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.name, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.description, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.description, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.position, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.position, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.color, {'attr': {'class': 'mdl-textfield__input'}}) }}
                            {{ form_label(form.color, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}

                        </div>
                    </div>

                    <div class="form__action">
                        {{ form_widget(form.save, {'attr': {'class': 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored', 'id': 'submit_button'}}) }}
                    </div>
                </div>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}